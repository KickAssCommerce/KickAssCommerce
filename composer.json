{
    "name": "kickasscommerce/kickasscommerce",
    "description": "A small proof of concept for Moltin",
    "type": "project",
    "license": "MIT",
    "repositories": [
        { "type": "path", "url": "src/*" }
    ],
    "require": {
        "vlucas/phpdotenv": "*",
        "slim/slim": "*",
        "moltin/php-sdk": "*",
        "symfony/serializer": "^3.2",
        "symfony/property-access": "^3.2",
        "goaop/framework": "^2.1",
        "kickasscommerce/moltin": "*@dev",
        "cache/filesystem-adapter": "^0.3.3",
        "symfony/console": "^3.2",
        "kickasscommerce/authentication": "*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "KickAss\\Commerce\\": "src/Commerce",
            "KickAss\\Authentication\\": "src/Authentication/src",
            "KickAss\\Moltin\\": "src/Moltin/src",
            "Example\\Project\\": "app/"
        }
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 src"
    }
}
